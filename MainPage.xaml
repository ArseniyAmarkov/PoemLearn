<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PoemLearn.MainPage"
             Title="Poem Learn"
             BackgroundImageSource="poemImage.jpg">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Главное меню" 
                   FontSize= "Header"
                   FontAttributes="Italic"
                   HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
            <Button x:Name="OnSecondPageButton"
                Text = "Начать" FontSize="Large" BorderWidth="1"
                HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
                Clicked="SecondPageButton_Click" />
            <Button x:Name="Help_Button"
                Text = "Помощь" FontSize="Large" BorderWidth="1"
                HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
                />
            <Button x:Name="Quit_Button"
                Text = "Выйти" FontSize="Large" BorderWidth="1"
                HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
                 />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
